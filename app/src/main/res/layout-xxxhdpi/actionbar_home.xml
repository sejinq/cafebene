<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="117dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:id="@+id/parentBar"
        android:background="#0d1f37">

        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parentBar"
        android:layout_alignTop="@+id/parentBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:background="@null"
        android:src="@drawable/search_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tabBar"
        android:layout_below="@+id/parentBar" >

        <ImageButton
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/tab1"
            android:background="@android:color/transparent"
            android:src="@drawable/actionbar_home"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/tab2"
            android:background="@android:color/transparent"
            android:src="@drawable/actionbar_home"
            android:layout_toRightOf="@+id/tab1"
            android:layout_toEndOf="@+id/tab1" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/tab3"
            android:layout_toRightOf="@+id/tab2"
            android:layout_toEndOf="@+id/tab2"
            android:background="@android:color/transparent"
            android:src="@drawable/actionbar_home"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/tab4"
            android:layout_toRightOf="@+id/tab3"
            android:layout_toEndOf="@+id/tab3"
            android:background="@android:color/transparent"
            android:src="@drawable/actionbar_home"/>
    </RelativeLayout>
</RelativeLayout>