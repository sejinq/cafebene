<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/parentBar"
        android:background="@color/actionbar_background">
        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parentBar"
        android:layout_alignTop="@+id/parentBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:background="@null"
        android:src="@drawable/search_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/tabBar"
        android:background="@color/tab_background"
        android:layout_below="@+id/parentBar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabs">
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tab1"
                android:text="@string/home"
                android:textSize="14dp"
                android:background="@android:color/transparent"
                 />

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/recommend_cosmetic"
                android:textSize="14dp"
                android:id="@+id/tab2"
                android:background="@drawable/menutap"
                />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="@string/cosmetic_inform"
                android:textSize="14dp"
                android:layout_height="match_parent"
                android:id="@+id/tab3"
                android:background="@android:color/transparent"
                />

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="@string/my_page"
                android:textSize="14dp"
                android:layout_height="match_parent"
                android:id="@+id/tab4"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/actionbar_home_line" />
    </RelativeLayout>
</RelativeLayout>

