<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/home_action_bar"
        layout="@layout/actionbar_home"
        />

    <LinearLayout
        android:layout_below="@id/home_action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/inform_1"
            android:src="@drawable/inform_image1"
             />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:id="@+id/inform_2"
            android:src="@drawable/inform_image2" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:id="@+id/inform_3"
            android:src="@drawable/inform_image3" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:id="@+id/inform_4"
            android:src="@drawable/inform_image4" />

    </LinearLayout>
</RelativeLayout>