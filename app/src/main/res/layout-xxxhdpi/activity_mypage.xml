<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/actionbar_home"
        android:id="@+id/home_action_bar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 상단 컨테이너 -->
            <RelativeLayout
                android:id="@+id/mypage_top_container"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:background="@color/mypage_top_container_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"/>
            </RelativeLayout>

            <!-- 중단 컨테이너 -->
            <RelativeLayout
                android:id="@+id/mypage_middle_container"
                android:layout_width="match_parent"
                android:layout_height="221.5dp"
                android:layout_below="@id/mypage_top_container"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <View
                    android:id="@+id/line"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <!-- 하단 컨테이너 -->
            <LinearLayout
                android:id="@+id/mypage_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_middle_container"
                android:layout_marginTop="34dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <!-- 찜 목록 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_likelist"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_likelist_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/likelist_icon"/>

                    <TextView
                        android:id="@+id/mypage_likelist_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:text="찜 목록"/>
                </LinearLayout>

                <!-- 나의 리뷰 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_myreview"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_myreview_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/myriew_icon"/>

                    <TextView
                        android:id="@+id/mypage_myreview_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_likelist_icon"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:text="나의 리뷰"/>
                </LinearLayout>

                <!-- 회원정보 수정 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_info_modify"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_info_modify_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/info_modify_icon"/>

                    <TextView
                        android:id="@+id/mypage_info_modify_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:text="회원정보 수정"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>