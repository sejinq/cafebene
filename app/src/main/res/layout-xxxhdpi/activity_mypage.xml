<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/actionbar_home"
        android:id="@+id/home_action_bar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 상단 컨테이너 -->
            <RelativeLayout
                android:id="@+id/mypage_top_container"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:background="@drawable/mypage_top_bg">

            </RelativeLayout>

            <!-- 중단 컨테이너 -->
            <RelativeLayout
                android:id="@+id/mypage_middle_container"
                android:layout_width="match_parent"
                android:layout_height="221.5dp"
                android:layout_below="@id/mypage_top_container"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    android:id="@+id/mypage_profile_titletxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:includeFontPadding="false"
                    android:text="뷰티 프로필"
                    android:textSize="12dp"/>

                <View
                    android:id="@+id/line"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <!-- 하단 컨테이너 -->
            <LinearLayout
                android:id="@+id/mypage_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_middle_container"
                android:layout_marginTop="34dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <!-- 찜 목록 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_likelist"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_likelist_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/likelist_icon"/>

                    <TextView
                        android:id="@+id/mypage_likelist_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="찜 목록"
                        android:textSize="13.75dp"/>
                </LinearLayout>

                <!-- 나의 리뷰 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_myreview"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_myreview_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/myriew_icon"/>

                    <TextView
                        android:id="@+id/mypage_myreview_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_likelist_icon"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="나의 리뷰"
                        android:textSize="13.75dp"/>
                </LinearLayout>

                <!-- 환경설정 컨테이너 -->
                <LinearLayout
                    android:id="@+id/mypage_settings"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mypage_info_modify_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/info_modify_icon"/>

                    <!-- 환경설정이지만 임시로 로그아웃 텍스트 출력 -->
                    <TextView
                        android:id="@+id/mypage_info_modify_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="로그아웃"
                        android:textSize="13.75dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- 프로필 사진, 닉네임, 성별, 나이, 피부 타입 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/mypage_profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66.5dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/profile_image"/>

            <TextView
                android:id="@+id/mypage_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_profile_photo"
                android:includeFontPadding="false"
                android:layout_marginTop="14.5dp"
                android:layout_centerHorizontal="true"
                android:text="닉네임"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/mypage_genender_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_nickname"
                android:includeFontPadding="false"
                android:layout_marginTop="12.5dp"
                android:layout_marginBottom="12.5dp"
                android:layout_centerHorizontal="true"
                android:text="성별  /  나이"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/mypage_skintype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_genender_age"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:text="피부 타입"
                android:textSize="14dp"/>

            <!-- 피부 고민 위쪽 컨테이너 -->
            <LinearLayout
                android:id="@+id/mypage_skin_problem_top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_skintype"
                android:gravity="center"
                android:paddingTop="26dp">

                <!-- 건조 -->
                <TextView
                    android:id="@+id/mypage_skin_problem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/problem_dry"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"
                    android:background="@drawable/select_small_box"/>

                <!-- 유분 -->
                <TextView
                    android:id="@+id/mypage_skin_problem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/problem_oil"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"/>

                <!-- 주름 -->
                <TextView
                    android:id="@+id/mypage_skin_problem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/problem_wrinkle"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_unselected_tag"/>

                <!-- 피지 -->
                <TextView
                    android:id="@+id/mypage_skin_problem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:includeFontPadding="false"
                    android:text="@string/problem_subum"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"/>
            </LinearLayout>

            <!-- 피부 고민 아래쪽 컨테이너 -->
            <LinearLayout
                android:id="@+id/mypage_skin_problem_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_skin_problem_top_container"
                android:gravity="center_horizontal"
                android:paddingTop="17dp">

                <!-- 아토피 -->
                <TextView
                    android:id="@+id/mypage_skin_problem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/problem_atopic"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"/>

                <!-- 여드름 -->
                <TextView
                    android:id="@+id/mypage_skin_problem6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:text="@string/problem_trouble"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"/>

                <!-- 피부톤 -->
                <TextView
                    android:id="@+id/mypage_skin_problem7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/problem_color"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_unselected_tag"/>

                <!-- 다크써클 -->
                <TextView
                    android:id="@+id/mypage_skin_problem8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="21dp"
                    android:text="@string/problem_dark"
                    android:textSize="11dp"
                    android:textColor="@color/mypage_selected_tag"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>