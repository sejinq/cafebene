<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/home_action_bar"
        layout="@layout/actionbar_sub"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_action_bar"
        android:id="@+id/product_view_box"
        >
        <include
            android:id="@+id/viewbox"
            layout="@layout/activity_product_box" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/viewbox"
            android:id="@+id/smalltabs"
            android:orientation="horizontal">
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tab1"
                android:text="@string/product_curation"
                android:textSize="14dp"
                android:background="@drawable/tap" />

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/product_inform"
                android:textSize="14dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginStart="8.5dp"
                android:id="@+id/tab2"
                android:background="@android:color/transparent" />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="8.5dp"
                android:layout_marginStart="8.5dp"
                android:id="@+id/tab3"
                android:text="@string/price_inform"
                android:textSize="14dp"
                android:background="@android:color/transparent"/>

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tab4"
                android:text="@string/user_review"
                android:textSize="14dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginStart="8.5dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@+id/smalltabs"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:background="@color/theme_color" />

    </RelativeLayout>
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_view_box">
        <include
            android:id="@+id/tablayout1"
            layout="@layout/product_curation_tab"
            />
        <include
            android:id="@+id/tablayout2"
            layout="@layout/product_inform_tab"
            />
        <include
            android:id="@+id/tablayout3"
            layout="@layout/product_price_inform_tab"
            />
        <include
            android:id="@+id/tablayout4"
            layout="@layout/product_user_review_tab"
            />

        </FrameLayout>
</RelativeLayout>

