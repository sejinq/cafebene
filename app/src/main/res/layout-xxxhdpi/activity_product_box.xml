<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/productbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_action_bar"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:src="@drawable/product_default_image" />

        <ImageView
            android:id="@+id/tag_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:scaleType="center"
            android:src="@drawable/tag_new" />

        <ImageView
            android:id="@+id/tag_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tag_image1"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tag_image1"
            android:layout_toRightOf="@+id/tag_image1"
            android:src="@drawable/tag_hot" />


        <ImageButton
            android:id="@+id/likebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tag_image1"
            android:layout_marginRight="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/love_disable" />

        <TextView
            android:id="@+id/brand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="할루"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/product_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="룰ㄹ루랄"
            android:textColor="#ff606060"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:id="@+id/starshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star1"
                    android:layout_toRightOf="@+id/star1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star2"
                    android:layout_toRightOf="@+id/star2"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star3"
                    android:layout_toRightOf="@+id/star3"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star4"
                    android:layout_toRightOf="@+id/star4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_disable" />

                <TextView
                    android:id="@+id/average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.5dp"
                    android:layout_marginStart="10.5dp"
                    android:layout_toEndOf="@+id/star5"
                    android:layout_toRightOf="@+id/star5"
                    android:layout_gravity="center"
                    android:text="별점 (0.0)"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
