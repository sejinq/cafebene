            android:layout_height="wrap_content">

            <include
                layout="@layout/recommend_product"
                android:id="@+id/product_layer1"/>

            <include
                layout="@layout/recommend_product"
                android:id="@+id/product_layer2"/>

            <include
                layout="@layout/recommend_product"
                android:id="@+id/product_layer3"/>

            <include
                layout="@layout/recommend_product"
                android:id="@+id/product_layer4"/>

            <include
                layout="@layout/recommend_product"
                android:id="@+id/product_layer5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
