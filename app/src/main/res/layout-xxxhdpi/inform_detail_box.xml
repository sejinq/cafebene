<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/detail_basic_1"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/detail_image"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:src="@drawable/inform_detail_img1" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignTop="@+id/detail_image"
        android:layout_alignRight="@+id/detail_image"
        android:background="@android:color/transparent"
        android:src="@drawable/love_disable"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/detail_image"
        android:layout_alignRight="@+id/detail_image"
        android:background="@color/white"
        android:layout_below="@+id/detail_image"
        android:id="@+id/detail_text">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_detail_box_default"
            android:layout_marginLeft="18.5dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:includeFontPadding="false"
                android:id="@+id/content_title"
                android:layout_marginBottom="2dp"
                android:textColor="#ff00086b"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_below="@+id/content_title"
                android:textColor="@color/black"
                android:id="@+id/content_subtitle"
                android:textSize="15dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_detail_box_review"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:id="@+id/info_detail_product_image"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/info_detail_product_image"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드"
                    android:textSize="14dp"
                    android:id="@+id/review_brand"
                    android:textColor="#ff00086b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/review_brand"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:id="@+id/review_name"
                    android:text="제품명"/>
                </RelativeLayout>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="18dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/inform_detail_product_button"
                    android:src="@drawable/inform_detail_intent_button"
                    android:background="@android:color/transparent"/>
                </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
</RelativeLayout>