<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/noSearchLineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/no_search_line"/>

    <TextView
        android:id="@+id/noSearchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noSearchLineTop"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="검색 결과가 없습니다.\n다른 검색어를 입력해주세요."
        />

    <ImageView
        android:id="@+id/noSearchLineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noSearchText"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_search_line"/>
</RelativeLayout>