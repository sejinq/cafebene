<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/home_action_bar"
        layout="@layout/actionbar1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_action_bar"
        >
        <include
            android:id="@+id/viewbox"
            layout="@layout/activity_productbox" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/viewbox"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tab1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/tap1" />

            <ImageButton
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tab2"
                android:background="@android:color/transparent"
                android:src="@drawable/tap1" />
            <ImageButton
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tab3"
                android:background="@android:color/transparent"
                android:src="@drawable/tap1" />

            <ImageButton
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tab4"
                android:layout_marginRight="18dp"
                android:layout_marginEnd="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/tap1" />
            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
